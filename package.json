{
  "name": "grade4us",
  "version": "1.0.0",
  "description": "Parents and guardians need to monitor the progress of their children/wards progress at school. The purpose of Grade4Us is to provide parents/guardians with easy to use and convenient way to access their children/wards’ grades, which will be published by the child’s teachers/instructors.",
  "author": "Vitor Miranda <vcmiranda@outlook.com>",
  "private": true,
  "scripts": {
    "dev-client": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js --no-open",
    "dev-server": "NODE_ENV=developement nodemon ./server/server.js",
    "start": "concurrently 'npm run dev-server' 'npm run dev-client' --kill-others --names 'server,client'",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js --single-run",
    "e2e": "node test/e2e/runner.js",
    "test": "mocha --recursive",
    "lint": "eslint --ext .js,.vue src test/unit/specs test/e2e/specs",
    "build": "node build/build.js",
    "docs": "docsify serve docs --port 8082 --open true",
    "knex": "npm run migrate && npm run seed",
    "migrate": "knex migrate:latest --knexfile './server/knexfile.js'",
    "seed": "knex seed:run --knexfile './server/knexfile.js'"
  },
  "dependencies": {
    "grade4us-client": "file:client/",
    "grade4us-server": "file:server/"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-filehash": "^6.9.4",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "browser-sync": "^2.23.5",
    "browser-sync-webpack-plugin": "^1.2.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "chalk": "^2.0.1",
    "chromedriver": "^2.27.2",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "cross-spawn": "^5.0.1",
    "css-loader": "^0.28.0",
    "docsify-cli": "^4.2.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.3.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-html": "^3.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "inject-loader": "^3.0.0",
    "mocha": "^3.5.3",
    "node-notifier": "^5.1.2",
    "nodemon": "^1.14.11",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^1.2.0",
    "phantomjs-prebuilt": "^2.1.14",
    "portfinder": "^1.0.13",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "rimraf": "^2.6.0",
    "selenium-server": "^3.0.1",
    "semver": "^5.3.0",
    "shelljs": "^0.7.6",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.8.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "url-loader": "^0.5.8",
    "vue-loader": "^13.3.0",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.5.3",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
