{
  "name": "grade4us",
  "version": "1.0.0",
  "description": "Parents and guardians need to monitor the progress of their children/wards progress at school. The purpose of Grade4Us is to provide parents/guardians with easy to use and convenient way to access their children/wards’ grades, which will be published by the child’s teachers/instructors.",
  "author": "Vitor Miranda <vcmiranda@outlook.com>",
  "private": true,
  "scripts": {
    "dev-client": "webpack-dev-server --mode development --inline --progress --config build/webpack.dev.conf.js --no-open",
    "dev-server": "NODE_ENV=developement || SET \"NODE_ENV=developement\" && nodemon ./server/server.js",
    "start": "concurrently \"npm run dev-server\" \"npm run dev-client\" --kill-others --names \"server,client\"",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js --single-run",
    "e2e": "node test/e2e/runner.js",
    "test": "mocha --recursive",
    "lint": "eslint --ext .js,.vue src test/unit/specs test/e2e/specs",
    "build": "node build/build.js",
    "docs": "docsify serve docs --port 8082 --open true",
    "knex": "npm run migrate && npm run seed",
    "migrate": "knex migrate:latest --knexfile './server/knexfile.js'",
    "seed": "knex seed:run --knexfile './server/knexfile.js'"
  },
  "dependencies": {
    "grade4us-client": "file:client/",
    "grade4us-server": "file:server/",
    "webpack-cli": "^2.0.10",
    "webpack": "^4.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-filehash": "^6.9.8",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack-plugin": "^2.0.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "chalk": "^2.3.2",
    "chromedriver": "^2.36.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.0",
    "cross-env": "^5.1.3",
    "cross-spawn": "^6.0.5",
    "css-loader": "^0.28.10",
    "docsify-cli": "^4.2.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^3.0.6",
    "inject-loader": "^3.0.1",
    "mocha": "^5.0.4",
    "node-notifier": "^5.2.1",
    "nodemon": "^1.17.1",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "ora": "^2.0.0",
    "phantomjs-prebuilt": "^2.1.16",
    "portfinder": "^1.0.13",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.1",
    "rimraf": "^2.6.2",
    "selenium-server": "^3.10.0",
    "semver": "^5.5.0",
    "shelljs": "^0.8.1",
    "sinon": "^4.4.2",
    "sinon-chai": "^3.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "url-loader": "^1.0.1",
    "vue-loader": "^14.2.1",
    "vue-style-loader": "^4.0.2",
    "vue-template-compiler": "^2.5.13",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-server": "^3.1.0",
    "webpack-merge": "^4.1.2"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
